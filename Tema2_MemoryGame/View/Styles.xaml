<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Brush x:Key="WindowBackground">#69B279</Brush>
    <Brush x:Key="MenuBackground">#A4D2B0</Brush>
    <Brush x:Key="GameBackground">#EFDFEB</Brush>
    <Brush x:Key="ButtonBackground">#DFEFE2</Brush>
    <Brush x:Key="ButtonForeground">Black</Brush>
    <Brush x:Key="BorderBrush">#B269A2</Brush>
    <Brush x:Key="PanelBackground">#EFDFEB</Brush>
    <Brush x:Key="TextForeground">Black</Brush>
    <Brush x:Key="TitleForeground">Black</Brush>
    
    <Style TargetType="Button">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonForeground}"/>
        <Setter Property="Background" Value="{StaticResource ButtonBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ButtonForeground}"/>
    </Style>
</ResourceDictionary>